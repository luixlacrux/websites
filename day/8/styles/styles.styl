gris = #5F5F5F
rojo = #db5656

body
  color gris
  font-family sans-serif
  letter-spacing 2px

a
  text-decoration none

h1
  text-align center

.Header
  &-menu
    width 100%
    height 30px
    display flex
    justify-content flex-end
    align-items center
    border-bottom 1px solid #ccc
    a
      margin-left 10px
      font-weight bold
      color gris
      &:hover
        color orange
.Main
  display flex
  align-items center
  flex-direction column
  margin-top 10vh
  &-icon
    cursor pointer
    color #aaa
    padding .1em .3em
    border-radius 50%
    font-size 6em
    box-shadow: 0px 0px 0px 0px #EEFF41
