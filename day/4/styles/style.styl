gris = #5F5F5F
rojo = #EA3556

body
  color gris
  font-family sans-serif
  letter-spacing 2px

a
  text-decoration none

h1
  text-align center

.Header
  &-menu
    width 100%
    height 30px
    display flex
    justify-content flex-end
    align-items center
    border-bottom 1px solid #ccc
    a
      margin-left 10px
      font-weight bold
      color gris
      &:hover
        color orange
.Main
  margin 0 auto
  display flex
  max-width 1000px
  justify-content: space-between;
  border 1px #ccc solid
  border-radius .3em
  padding 1em
  &-colors
    max-width 200px
    width 10%
    display flex
    flex-direction column
    border-radius .3em
    padding .5em
    .item
      outline none
      cursor pointer
      width 80%
      height 10vh
      max-width 80px
      max-height 70px
      background rojo
      border-radius .5em
      margin-top 1em
      border none
      &:first-child
        margin 0
      &:last-child
        border 1px #ccc solid

  &-canvas
    width 80%
    display flex
    flex-direction column
    border 1px #ccc solid
    border-radius .3em
    padding .5em
    margin-left .5em
    .item
      display flex
      flex-wrap wrap
      justify-content center
      height 20vh
      max-height 150px
      .cell
        cursor: crosshair;
        width 22%
        margin 1%
        border-radius .3em
        border 1px #ccc solid
