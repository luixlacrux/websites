gris = #5F5F5F
verde = #5af158

body
  color gris
  font-family sans-serif
  letter-spacing 2px

a
  text-decoration none

h1
  text-align center

.Header
  &-menu
    width 100%
    height 30px
    display flex
    justify-content flex-end
    align-items center
    border-bottom 1px solid #ccc
    a
      margin-left 10px
      font-weight bold
      color gris
      &:hover
        color orange
.Main
  display flex
  align-items center
  flex-direction column
  text-align center

  &-game
    display flex
    justify-content center
    align-items center
    position relative

    .ball
      cursor pointer
      width 100px
      height 100px
      border-radius 50%
      background #8700ff
      position absolute
      animation bounce 15s infinite
    .messages
      display none
      flex-direction column
      align-items center
      .next
        outline none
        cursor pointer
        border 1px solid #ccc
        padding .8em 1.5em
        border-radius .5em
        background verde
        color white
        font-size 1.2em
        font-weight bold
        transition 0.7s all
        &:hover
          background white
          color verde
        &:active
          box-shadow inset 0px 0px 15px 10px #eee

@keyframes bounce
  0% {margin-top: 0px; animation-timing-function: ease-in;}
  12% {margin-top: 340px; animation-timing-function: ease-out;}
  25% {margin-top: 0px; animation-timing-function: ease-in;}
  37% {margin-top: 340px; animation-timing-function: ease-out;}
  49% {margin-top: 0px; animation-timing-function: ease-in;}
  61% {margin-top: 340px; animation-timing-function: ease-out;}
  75% {margin-top: 0px; animation-timing-function: ease-in;}
  87% {margin-top: 340px; animation-timing-function: ease-out;}
  100% {margin-top: 0px; animation-timing-function: ease-in;}
