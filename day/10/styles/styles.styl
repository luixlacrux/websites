gris = #5F5F5F
verde = #5af158

body
  color gris
  font-family sans-serif
  letter-spacing 2px

a
  text-decoration none

h1
  text-align center

.Header
  &-menu
    width 100%
    height 30px
    display flex
    justify-content flex-end
    align-items center
    border-bottom 1px solid #ccc
    a
      margin-left 10px
      font-weight bold
      color gris
      &:hover
        color orange
.Main
  min-height 50vh
  display flex
  flex-direction column
  justify-content flex-start
  align-items center
  padding 1em

  &-grid
    display flex
    flex-wrap wrap
    justify-content space-around
    .roll
      margin 20px
      animation-duration 2s

/* <==== KEY FRAMES ===> */
@keyframes rotate
  0%
    transform rotate(360deg)
  50%
    transform rotate(720deg)
  100%
    transform rotate(1080deg)

@keyframes zoom
  0%
    transform scale(2)
  50%
    transform rotate(3)
  100%
    transform rotate(1)

@keyframes skew
  0%
    transform skew(50deg)
  25%
    transform skew(30deg)
  50%
    transform initial
  75%
    transform shew(-30deg)
  100%
    transform skew(-50deg)
