gris = #5F5F5F
rojo = #db5656

body
  color gris
  font-family sans-serif
  letter-spacing 2px

a
  text-decoration none

h1
  text-align center

.Header
  &-menu
    width 100%
    height 30px
    display flex
    justify-content flex-end
    align-items center
    border-bottom 1px solid #ccc
    a
      margin-left 10px
      font-weight bold
      color gris
      &:hover
        color orange
.Main
  display flex
  flex-direction column
  align-items center

  &-calendar
    display flex
    flex-wrap: wrap
    align-items center

  &-day
    color #ccc
    text-align center
    margin 1em 1.5vw
    &.today
      color rojo

    .currentDate
      display none
      position relative
      color black
      font-weight  bold
      letter-spacing 1px
      border 1px #ccc solid
      border-radius 0 0 .4em .4em
      &.show
        display block
      .arrow
        background rojo
        position absolute
        width 12px
        height 12px
        border-radius 6px 6px 0 0
        top -10px
        &.left
          left 5px
        &.right
          right 5px
      .month
        text-transform Uppercase
        padding .3em 1em
        color #fefefe
        background rojo
        font-size 12px
        margin 0
      .date
        font-size 2em
        color black
        padding 0
        margin 0

  &-messageDay
    text-align center
    padding-top .5em
    border-top 2px solid #ccc
    font-size 1.3em
    font-style italic
